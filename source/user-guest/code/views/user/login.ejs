<%- include('../partials/messages') %> 
<div class="row mt-5 ">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Login</h1>
            <form action="#" method="POST" id="form-login">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control"
                        placeholder="Enter Password" />
                    <br>
                </div>
                <div class="form-group login-button text-center">
                    <button type="submit" class="btn btn-danger btn-block">Login</button>
                    <a href="/users/auth/facebook" class="btn btn-primary btn-block"><i class="fab fa-facebook-square"></i> Login with Facebook</a>
                </div>
            </form>
            <p style="text-align: center;">
                or <a href="#" style="color: red;">Forgot password?</a>
            </p>
            <p class="lead mt-4">
                No Account? <a href="/users/register" style="color: red;">Register</a>
            </p>
        </div>
    </div>
</div>