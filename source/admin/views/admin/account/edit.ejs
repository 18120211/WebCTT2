<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/d62abf4f8f.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.3/js/fileinput.min.js" integrity="sha512-vDrq7v1F/VUDuBTB+eILVfb9ErriIMW7Dn3JC/HOQLI8ZzTBTRRKrKJO3vfMmZFQpEGVpi+EYJFatPgVFxOKGA==" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.3/css/fileinput.min.css" integrity="sha512-8KeRJXvPns3KF9uGWdZW18Azo4c1SG8dy2IqiMBq8Il1wdj7EWtR3EGLwj+DnvznrRjn0oyBU+OEwJk7A79n7w==" crossorigin="anonymous" />
    <link rel="stylesheet" href="/css/stylesheet.css">
    
</head>
<body>
    <div  id="container">
        <%- include('../common/header',{user: user}); -%>
        <%- include('../common/column_left'); -%>
        <div id="content">
            <div class="page-header">
                <div class="container-fluid">
                    <h2><%= data.title %></h2>
                </div>
            </div>
            <form action="" method="post" id="frmUpdateInfo">
                <div class=" course-info">
                    <div class="container-fluid">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title"><i class="fa fa-pencil"></i> Thông tin giảng viên </h3>
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="info">
                                        <div class="form-group">
                                            <label class ="col-sm-2 control-label" for="my-input">Name:</label>
                                            <div class="col-sm-10">
                                                <input  class="form-control" type="text" name="name" value="<%=user.name%>" >
                                            </div>
                                        </div>
                                        <div class="form-group hidden">
                                            <label class ="col-sm-2 control-label" for="my-input">ID:</label>
                                            <div class="col-sm-10">
                                                <input  class="form-control" type="text" name="id" value="<%=user.id%>">
                                            </div>
                                        </div>
                                        <div class="form-group image">
                                            <label class ="col-sm-2 control-label" for="my-input">Ảnh đại diện:</label>
                                            <div class="col-sm-10">
                                                <img src="<%=user.avatar%>" id="avatar-img">
                                                <div class="avatar-update">
                                                    <input type="file" name="file" id="file"/>
                                                    <input type="text" name="avatar" id="avatar" value="<%=user.avatar%>" />
                                                    <button class="btn btn-success" id="avartar-upload" > Thay avatar </button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class ="col-sm-2 control-label" for="my-input">Gender:</label>
                                            <div class="col-sm-10">
                                                <select  class="form-control" type="text" name="gender">
                                                    <%if (user.gender == "nam") { %>
                                                        <option value="nam" selected="selected"> Nam</option>
                                                        <option value="nữ"> Nữ</option>
                                                    <% }else{ %>
                                                        <option value="nam" > Nam</option>
                                                        <option value="nữ"  selected="selected"> Nữ</option>
                                                    <% } %>
                                                </select>
                                            </div>
                                        </div>
                                        <%if (!user.roll) { %>
                                        <div class="form-group">
                                            <label class ="col-sm-2 control-label" for="my-input">Description:</label>
                                            <div class="col-sm-10">
                                                <textarea  class="form-control" type="text" name="description" ><%=user.description%></textarea>
                                            </div>
                                        </div>
                                        <% } %>
            
                                        <div class="form-group">
                                            <label class ="col-sm-2 control-label" for="my-input">Password:</label>
                                            <div class="col-sm-10">
                                                <input  class="form-control" type="password" name="password" value="" >
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class ="col-sm-2 control-label" for="my-input">Confirm:</label>
                                            <div class="col-sm-10">
                                                <input  class="form-control" type="password" name="confirm" value="" >
                                            </div>
                                        </div>
                                        <div class="form-group col-sm-10 text-center">
                                            <button class="btn btn-success" type="submit" id="update-info"> Thay đổi thông tin </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                   
                </div>
            </form>
      </div>
        <%- include('../common/footer'); -%>
    </div>
    
</body>
<script>
    $(document).ready(function() {
        $('#avartar-upload').on('click', function() {
            var fd = new FormData();
            var files = $('#file')[0].files;
            var id = $("input[name='id']").val();
            var folder = "/image/lecturer/";
            // Check file selected or not
            if(files.length > 0 ){
            fd.append('file',files[0]);

            $.ajax({
                url: '/admin/upload?&id=' + id + '&folder=' + folder,
                type: 'post',
                data: fd,
                contentType: false,
                processData: false,
                success: function(response){
                    if(response){
                        var timestamp = new Date().getTime();     
                        var el = document.getElementById("avatar-img");     
                        el.src = response +"?t=" + timestamp; 
                        $("input#avatar").val(response);
                    }else{
                        alert('file not uploaded');
                    }
                },
            });
            }else{
            alert("Please select a file.");
            }
            return false;
        });
        $('#avatar-img').on('click', function() {
            $('#file').trigger("click");
        });
      
        //check password and re-passowrd
        $('#frmUpdateInfo').on('submit', function(e) {
            e.preventDefault();
            password = $("input[name='password']").val();
            re_password = $("input[name='confirm']").val();
            if(password!==re_password && password !== ""){
                alert("password and confirm doesn't match");
            }else{
                $("#frmUpdateInfo").off("submit").submit();
            }
        });
        
   });
</script>
</html>

